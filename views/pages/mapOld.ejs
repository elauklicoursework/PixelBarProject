            Highcharts.mapChart('container', {
                colors: ["#f1c40f", "#2ecc71", "#9b59b6", "#e74c3c", "#34495e", "#3498db", "#1abc9c", "#f39c12", "#d35400"],
                chart: {//displays world map
                    "backgroundColor": "#34495e",
                    map: mapData,
                    
                 },
                title: {
                    text: 'Popularity By Country:'
                },
                mapNavigation: {
                    enabled: true,
                    buttonOptions: {
                        verticalAlign: 'bottom'
                    }
                },
                mapView: {
                    projection: {
                        name: 'WebMercator'
                    },
                    zoom: 1
                },
                colorAxis: {
                    min: 1,
                    max: 100,
                    type: 'logarithmic'
                },
                legend: {
